import java.util.*;

class Condition {

   public static void main(String [] args) {
   Accept s = new Accept();
   s.calculate();
   s.greatest();
}

}

class Accept {
   
   Scanner s = new Scanner(System.in);
   int a, b;
   public void calculate() {
      System.out.println("Enter value of 1st number = ");
      a = s.nextInt();
      System.out.println("Enter value of 2nd number = ");
      b = s.nextInt();
      
   }
   public void greatest() {
      if (a > b) {
      
         System.out.println("A is the greatest = " + a + " by a difference of " + (a - b));
         
      } else {
      
         System.out.println("B is the greatest = " + b + " by a difference of " + (b - a));    
      }
   } 
}     
